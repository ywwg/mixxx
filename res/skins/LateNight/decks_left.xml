<Template>
    <WidgetGroup>
        <ObjectName>DecksSizer</ObjectName>
        <Layout>vertical</Layout>
        <SizePolicy>me,min</SizePolicy>
        <Children>
            <WidgetGroup>
                <ObjectName>DecksLeftContainer</ObjectName>
                <Layout>vertical</Layout>
                <SizePolicy>me,min</SizePolicy>
                <Children>
                    <Template src="skin:deck.xml">
        	            <SetVariable name="channum">1</SetVariable>
                        <SetVariable name="deck_color">#EECE33</SetVariable>
                        <SetVariable name="SignalRGBLowColor">#ff5f00</SetVariable>
                        <SetVariable name="SignalRGBMidColor">#72ec00</SetVariable>
                        <SetVariable name="SignalRGBHightColor">#725f8d</SetVariable>
        	        </Template>
                    <WidgetGroup>
                        <Layout>horizontal</Layout>
                        <Children>
                            <Template src="skin:deck.xml">
                                <SetVariable name="channum">3</SetVariable>
                                <SetVariable name="deck_color">#ED5732</SetVariable>
                                <SetVariable name="SignalRGBLowColor">#ff5f00</SetVariable>
                                <SetVariable name="SignalRGBMidColor">#72ec00</SetVariable>
                                <SetVariable name="SignalRGBHightColor">#725f8d</SetVariable>
                            </Template>
                        </Children>
                        <Connection>
                            <ConfigKey>[Master],show_4decks</ConfigKey>
                            <BindProperty>visible</BindProperty>
                        </Connection>
                    </WidgetGroup>
                </Children>
            </WidgetGroup>
        </Children>
    </WidgetGroup>
</Template>
