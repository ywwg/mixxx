<!DOCTYPE template>
<!--
  Description:
    A standard knob.
  Variables:
    control: The control to connect to.
-->
<Template>
  <WidgetGroup>
    <Layout>vertical</Layout>
    <ObjectName>EffectUnitKnob</ObjectName>
    <Children>
    <WidgetGroup>
        <Layout>horizontal</Layout>
        <SizePolicy>min,min</SizePolicy>
        <Children>
	      <Knob>
	        <NumberStates>64</NumberStates>
	        <Path>knobs/knob_rotary_s%1.png</Path>
	        <Connection>
	          <ConfigKey><Variable name="group"/>,<Variable name="control"/></ConfigKey>
	        </Connection>
	      </Knob>
        </Children>
      </WidgetGroup>
      <Label>
        <Size>4me,15f</Size>
        <ObjectName>KnobLabel</ObjectName>
        <Text><Variable name="label"/></Text>
      </Label>
    </Children>
  </WidgetGroup>
</Template>
