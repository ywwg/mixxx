<!DOCTYPE template>
<!--
  Description:
    A VU meter.
  Variables:
    group: The group for the controls.
    control: The control to connect to.

-->
<Template>
  <VuMeter>
    <TooltipId><Variable name="TooltipId"/></TooltipId>
    <MinimumSize>5,20</MinimumSize>
    <MaximumSize>5,-1</MaximumSize>
    <PathVu scalemode="STRETCH">vumeter_v.svg</PathVu>
    <Horizontal>false</Horizontal>
    <PeakHoldSize>5</PeakHoldSize>
    <PeakHoldTime>600</PeakHoldTime>
    <PeakFallTime>100</PeakFallTime>
    <PeakFallStep>1</PeakFallStep>
    <Connection>
      <ConfigKey><Variable name="group"/>,<Variable name="control"/></ConfigKey>
    </Connection>
  </VuMeter>
</Template>
