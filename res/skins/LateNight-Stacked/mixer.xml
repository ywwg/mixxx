<Template>
	<WidgetGroup>
	    <ObjectName>Mixer</ObjectName>
		<SizePolicy>e,max</SizePolicy>
        <MinimumSize>450,</MinimumSize>
		<MaximumSize>1000,</MaximumSize>
		<Layout>horizontal</Layout>
		<Children>
		    <WidgetGroup>
                <ObjectName>MicContainer</ObjectName>
                <Layout>vertical</Layout>
                <SizePolicy>max,min</SizePolicy>
                <Children>
                    <Template src="skin:microphone.xml"/>
                </Children>
            </WidgetGroup>
			<WidgetGroup>
			    <ObjectName>PrimaryMixer</ObjectName>
				<Layout>vertical</Layout>
				<SizePolicy>me,max</SizePolicy>
				<Children>
					<WidgetGroup>
					    <Layout>horizontal</Layout>
					    <SizePolicy>me,max</SizePolicy>
					    <Children>
                           <WidgetGroup>
                              <Layout>vertical</Layout>
                              <Children>
                                 <WidgetGroup>
                                    <ObjectName>MasterSync</ObjectName>
                                    <SizePolicy>f,me</SizePolicy>
                                    <Size>50,</Size>
                                    <Layout>vertical</Layout>
                                    <Children>
                                        <PushButton>
                                            <TooltipId>sync_master</TooltipId>
                                            <Style></Style>
                                            <NumberStates>2</NumberStates>
                                            <State>
                                                <Number>0</Number>
                                                <Pressed>btn_mastersync_master_on.png</Pressed>
                                                <Unpressed>btn_mastersync_master_off.png</Unpressed>
                                            </State>
                                            <State>
                                                <Number>1</Number>
                                                <Pressed>btn_mastersync_master_on.png</Pressed>
                                                <Unpressed>btn_mastersync_master_on.png</Unpressed>
                                            </State>
                                            <Pos>4,4</Pos>
                                            <Connection>
                                                <ConfigKey>[InternalClock],sync_master</ConfigKey>
                                                <ButtonState>LeftButton</ButtonState>
                                            </Connection>
                                        </PushButton>
                                        <NumberBpm>
                                            <TooltipId>visual_bpm</TooltipId>
                                            <Style>QLabel { font: bold 18px/21px Lucida Grande, Lucida Sans
                                                Unicode, Arial, Verdana, sans-serif;
                                                background-color:
                                                transparent; color: #EECE33; text-align: left;padding-left:
                                                1px;
                                                }
                                            </Style>
                                            <Channel>1</Channel>
                                            <NumberOfDigits>2</NumberOfDigits>
                                            <Connection>
                                                <ConfigKey>[InternalClock],bpm</ConfigKey>
                                            </Connection>
                                        </NumberBpm>
                                    </Children>
                                </WidgetGroup>
                                <WidgetGroup>
                                    <ObjectName>ClockWidget</ObjectName>
                                    <Layout>horizontal</Layout>
                                    <SizePolicy>me,me</SizePolicy>
                                    <Children>
                                        <WidgetGroup>
                                          <Layout>horizontal</Layout>
                                          <SizePolicy>max,max</SizePolicy>
                                          <Children>
                                            <Time>
                                              <TooltipId>time</TooltipId>
                                              <Style>QLabel { font: bold 16px/19px Lucida Grande, Lucida Sans Unicode, Arial, Verdana, sans-serif;
                                                        background-color: transparent; color: #EECE33; }
                                              </Style>
                                              <ShowSeconds>false</ShowSeconds>
                                              <ClockFormat>12</ClockFormat>
                                          </Time>
                                        </Children>
                                      </WidgetGroup>
                                    </Children>
                                  </WidgetGroup>
                                </Children>
                              </WidgetGroup>
					       <WidgetGroup>
				                <ObjectName>MixerLeftMargin</ObjectName>
				                <Layout>horizontal</Layout>
				                <SizePolicy>me,min</SizePolicy>
				                <MinimumSize>1,</MinimumSize>
				                <Children>
				                </Children>
				            </WidgetGroup>
							<WidgetGroup>
								<ObjectName>MixerContainer</ObjectName>
								<Layout>vertical</Layout>
								<SizePolicy>e,max</SizePolicy>
								<Children>
									<WidgetGroup>
									    <SizePolicy>max,min</SizePolicy>
										<Layout>horizontal</Layout>
                                        <MaximumSize>400,400</MaximumSize>
										<Children>
										   <WidgetGroup>
										        <SizePolicy>max,min</SizePolicy>
									            <Layout>horizontal</Layout>
									            <Children>
													<Template src="skin:mixer_channel_vertical.xml">
														<SetVariable name="channum">3</SetVariable>
		        									</Template>
									            </Children>
									            <Connection>
									                <ConfigKey persist="true">[Master],show_4decks</ConfigKey>
									                <BindProperty>visible</BindProperty>
									            </Connection>
									        </WidgetGroup>
											<Template src="skin:mixer_channel.xml">
												<SetVariable name="channum">1</SetVariable>
											</Template>
											<Template src="skin:mixer_channel_reversed.xml">
												<SetVariable name="channum">2</SetVariable>
											</Template>
				                           <WidgetGroup>
				                                <SizePolicy>max,min</SizePolicy>
		                                        <Layout>horizontal</Layout>
		                                        <Children>
		                                            <Template src="skin:mixer_channel_vertical.xml">
		                                                <SetVariable name="channum">4</SetVariable>
		                                            </Template>
		                                        </Children>
		                                        <Connection>
		                                            <ConfigKey persist="true">[Master],show_4decks</ConfigKey>
		                                            <BindProperty>visible</BindProperty>
		                                        </Connection>
		                                    </WidgetGroup>
										</Children>
									</WidgetGroup>
									<WidgetGroup>
									    <ObjectName>CrossFadeContainer</ObjectName>
										<Layout>horizontal</Layout>
										<SizePolicy>me,max</SizePolicy>
										<MinimumSize>150,50</MinimumSize>
										<Children>
										    <WidgetGroup>
										        <ObjectName>Crossfader</ObjectName>
										        <Layout>horizontal</Layout>
										        <SizePolicy>me,min</SizePolicy>
										        <Children>
													<SliderComposed>
														<TooltipId>crossfader</TooltipId>
														<Handle>knob_crossfader.png</Handle>
														<Slider>slider_crossfader.png</Slider>
														<Horizontal>true</Horizontal>
														<Connection>
															<ConfigKey>[Master],crossfader</ConfigKey>
														</Connection>
													</SliderComposed>
												</Children>
											</WidgetGroup>
										</Children>
									</WidgetGroup>
								</Children>
							</WidgetGroup>
							<WidgetGroup>
                                <ObjectName>MixerRightMargin</ObjectName>
                                <Layout>horizontal</Layout>
                                <SizePolicy>me,min</SizePolicy>
                                <MinimumSize>1,</MinimumSize>
                                <Children>
                                </Children>
                            </WidgetGroup>
						</Children>
					</WidgetGroup>
				</Children>
			</WidgetGroup>
			<WidgetGroup>
			    <ObjectName>MasterControls</ObjectName>
			    <SizePolicy>max,min</SizePolicy>
                <MinimumSize>100,220</MinimumSize>
                <Layout>vertical</Layout>
                <Children>

                    <WidgetGroup>
                        <Size>100,100</Size>
                        <Children>
                            <StatusLight>
                                <TooltipId>PeakIndicator</TooltipId>
                                <Style></Style>
                                <PathStatusLight>btn_clipping1_over.png</PathStatusLight>
                                <PathBack>btn_clipping1.png</PathBack>
                                <Pos>38,5</Pos>
                                <Connection>
                                    <ConfigKey>[Master],PeakIndicator</ConfigKey>
                                </Connection>
                            </StatusLight>
                            <StatusLight>
                                <TooltipId>PeakIndicator</TooltipId>
                                <Style></Style>
                                <PathStatusLight>btn_clipping1_over.png</PathStatusLight>
                                <PathBack>btn_clipping1.png</PathBack>
                                <Pos>49,5</Pos>
                                <Connection>
                                    <ConfigKey>[Master],PeakIndicator</ConfigKey>
                                </Connection>
                            </StatusLight>
                            <VuMeter>
                                <TooltipId>channel_VuMeter</TooltipId>
                                <Style></Style>
                                <PathVu>btn_volume_display1_over.png</PathVu>
                                <PathBack>btn_volume_display1.png</PathBack>
                                <Pos>38,20</Pos>
                                <Horizontal>false</Horizontal>
                                <PeakHoldSize>5</PeakHoldSize>
                                <PeakHoldTime>500</PeakHoldTime>
                                <PeakFallTime>50</PeakFallTime>
                                <PeakFallStep>2</PeakFallStep>
                                <Connection>
                                    <ConfigKey>[Master],VuMeterL</ConfigKey>
                                </Connection>
                            </VuMeter>
                            <VuMeter>
                                <TooltipId>channel_VuMeter</TooltipId>
                                <Style></Style>
                                <PathVu>btn_volume_display1_over.png</PathVu>
                                <PathBack>btn_volume_display1.png</PathBack>
                                <Pos>49,20</Pos>
                                <Horizontal>false</Horizontal>
                                <PeakHoldSize>5</PeakHoldSize>
                                <PeakHoldTime>500</PeakHoldTime>
                                <PeakFallTime>50</PeakFallTime>
                                <PeakFallStep>2</PeakFallStep>
                                <Connection>
                                    <ConfigKey>[Master],VuMeterR</ConfigKey>
                                </Connection>
                            </VuMeter>
                        </Children>
                    </WidgetGroup>
                    <WidgetGroup>
                        <ObjectName>MasterKnobs</ObjectName>
                        <SizePolicy>f,f</SizePolicy>
                        <Size>100,110</Size>
                        <Children>
                          <Knob>
                              <TooltipId>master_volume</TooltipId>
                              <Style></Style>
                              <NumberStates>64</NumberStates>
                              <Path>knobs/knob_rotary_s%1.png</Path>
                              <Pos>3,10</Pos>
                              <Connection>
                                  <ConfigKey>[Master],volume</ConfigKey>
                              </Connection>
                          </Knob>
                          <Label>
                              <Pos>3,48</Pos>
                              <ObjectName>KnobLabel</ObjectName>
                              <Text>Master</Text>
                          </Label>
                          <Knob>
                              <TooltipId>balance</TooltipId>
                              <Style></Style>
                              <NumberStates>63</NumberStates>
                              <Path>knobs/knob_rotary_s%1.png</Path>
                              <Pos>3,58</Pos>
                              <Connection>
                                  <ConfigKey>[Master],balance</ConfigKey>
                              </Connection>
                          </Knob>
                          <Label>
                              <Pos>1,96</Pos>
                              <ObjectName>KnobLabel</ObjectName>
                              <Text>Balance</Text>
                          </Label>
                          <Knob>
                              <TooltipId>headphone_volume</TooltipId>
                              <Style></Style>
                              <NumberStates>64</NumberStates>
                              <Path>knobs/knob_rotary_s%1.png</Path>
                              <Pos>53,10</Pos>
                              <Connection>
                                  <ConfigKey>[Master],headVolume</ConfigKey>
                              </Connection>
                          </Knob>
                          <Label>
                              <Pos>50,48</Pos>
                              <ObjectName>KnobLabel</ObjectName>
                              <Text>Head Vol</Text>
                          </Label>
                          <Knob>
                              <TooltipId>headMix</TooltipId>
                              <Style></Style>
                              <NumberStates>64</NumberStates>
                              <Path>knobs/knob_rotary_s%1.png</Path>
                              <Pos>53,58</Pos>
                              <Connection>
                                  <ConfigKey>[Master],headMix</ConfigKey>
                              </Connection>
                          </Knob>
                          <Label>
                              <Pos>50,96</Pos>
                              <ObjectName>KnobLabel</ObjectName>
                              <Text>Pre/Main</Text>
                          </Label>
                       </Children>
                    </WidgetGroup>
                </Children>
            </WidgetGroup>
		</Children>
	</WidgetGroup>
</Template>
